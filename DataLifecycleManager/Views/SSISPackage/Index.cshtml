@model List<DataLifecycleManager.Presentation.ViewModels.SSISPackage.SSISPackageViewModel>

@{
    ViewData["Title"] = "SSIS Package Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-box me-2"></i>SSIS Package Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Package
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-box fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No SSIS packages configured yet.</p>
                    <a asp-action="Create" class="btn btn-primary">Create First Package</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Folder</th>
                                <th>Project</th>
                                <th>Package Name</th>
                                <th>Server</th>
                                <th>Catalog</th>
                                <th>Auth</th>
                                <th>Status</th>
                                <th>Timeout (min)</th>
                                <th>Last Execution</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-info">@item.FolderName</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.ProjectName</span>
                                    </td>
                                    <td>
                                        <strong>@item.PackageName</strong>
                                    </td>
                                    <td>
                                        <small>@item.ServerAddress</small>
                                    </td>
                                    <td>
                                        <small>@item.CatalogName</small>
                                    </td>
                                    <td>
                                        @if (item.UseWindowsAuthentication)
                                        {
                                            <span class="badge bg-primary"><i class="fab fa-windows"></i> Windows Auth</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-database"></i> SQL Auth</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == DataLifecycleManager.Domain.Enums.SSISPackageStatus.Active)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@item.TimeoutMinutes</td>
                                    <td>
                                        @if (item.LastExecutionDate.HasValue)
                                        {
                                            <small>@item.LastExecutionDate.Value.ToString("yyyy-MM-dd HH:mm")</small>
                                            <br />
                                            @if (item.LastExecutionStatus ==
                                                                            DataLifecycleManager.Domain.Enums.ExecutionStatus.Succeeded)
                                            {
                                                <span class="badge bg-success">@item.LastExecutionStatus</span>
                                            }
                                            else if (item.LastExecutionStatus ==
                                            DataLifecycleManager.Domain.Enums.ExecutionStatus.Failed)
                                            {
                                                <span class="badge bg-danger">@item.LastExecutionStatus</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">@item.LastExecutionStatus</span>
                                            }
                                        }
                                        else
                                        {
                                            <small class="text-muted">Never executed</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary test-package"
                                                data-id="@item.Id" title="Test Package">
                                                <i class="fas fa-play"></i>
                                            </button>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"
                                                title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary"
                                                title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"
                                                title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.test-package').click(function () {
                var $btn = $(this);
                var id = $btn.data('id');
                var originalHtml = $btn.html();

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

                $.post('@Url.Action("TestPackage", "SSISPackage")/' + id, function (response) {
                    if (response.success) {
                        // Show success message with parameter details if available
                        var message = response.message;
                        
                        toastr.success(message, 'Package Connection Test', {
                            timeOut: 15000,
                            extendedTimeOut: 10000
                        });

                        // Log parameters to console for debugging
                        if (response.parameters && response.parameters.length > 0) {
                            console.log('Package Parameters:', response.parameters);
                        }
                    } else {
                        toastr.error(response.message, 'Package Connection Test Failed', {
                            timeOut: 10000,
                            extendedTimeOut: 5000
                        });
                    }
                }).fail(function (xhr, status, error) {
                    toastr.error('Error testing package connection: ' + error, 'Error');
                }).always(function () {
                    $btn.prop('disabled', false).html(originalHtml);
                });
            });
        });
    </script>
}