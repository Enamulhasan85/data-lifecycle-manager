@model DataLifecycleManager.Presentation.ViewModels.SSISPackage.CreateSSISPackageViewModel

@{
    ViewData["Title"] = "Create SSIS Package";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-cube me-2"></i>Create SSIS Package</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Backend Validation Errors -->
                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <strong>Validation Error:</strong> @ViewBag.ErrorMessage
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="row">
                            <!-- Left Column: Package Information -->
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="fas fa-cube me-2"></i>Package Information</h5>

                                <div class="mb-3">
                                    <label asp-for="FolderName" class="form-label"></label>
                                    <input asp-for="FolderName" class="form-control" />
                                    <span asp-validation-for="FolderName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ProjectName" class="form-label"></label>
                                    <input asp-for="ProjectName" class="form-control" />
                                    <span asp-validation-for="ProjectName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="PackageName" class="form-label"></label>
                                    <input asp-for="PackageName" class="form-control" />
                                    <span asp-validation-for="PackageName" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Description" class="form-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label"></label>
                                    <select asp-for="Status" class="form-select"
                                        asp-items="Html.GetEnumSelectList<DataLifecycleManager.Domain.Enums.SSISPackageStatus>()"></select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="TimeoutMinutes" class="form-label"></label>
                                    <input asp-for="TimeoutMinutes" class="form-control" type="number" min="1" />
                                    <span asp-validation-for="TimeoutMinutes" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right Column: SQL Server Connection & Configuration -->
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="fas fa-server me-2"></i>SQL Server Connection</h5>

                                <div class="mb-3">
                                    <label asp-for="ServerAddress" class="form-label"></label>
                                    <input asp-for="ServerAddress" class="form-control"
                                        placeholder="localhost\SQLEXPRESS" />
                                    <span asp-validation-for="ServerAddress" class="text-danger"></span>
                                    <small class="text-muted">Server where SSIS catalog is deployed</small>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CatalogName" class="form-label"></label>
                                    <input asp-for="CatalogName" class="form-control" />
                                    <span asp-validation-for="CatalogName" class="text-danger"></span>
                                    <small class="text-muted">SSIS Catalog database name (default: SSISDB)</small>
                                </div>

                                <div class="mb-3 form-check">
                                    <input asp-for="UseWindowsAuthentication" class="form-check-input" type="checkbox"
                                        id="useWindowsAuth" />
                                    <label asp-for="UseWindowsAuthentication" class="form-check-label"
                                        for="useWindowsAuth"></label>
                                </div>

                                <div id="sqlAuthFields">
                                    <div class="mb-3">
                                        <label asp-for="Username" class="form-label"></label>
                                        <input asp-for="Username" class="form-control" autocomplete="off" />
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="EncryptedPassword" class="form-label"></label>
                                        <input asp-for="EncryptedPassword" class="form-control" type="password"
                                            autocomplete="new-password" />
                                        <span asp-validation-for="EncryptedPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <hr class="my-4" />
                                <h5 class="mb-3"><i class="fas fa-cog me-2"></i>Package Configuration</h5>

                                <div class="mb-3">
                                    <label class="form-label">Package Parameters</label>
                                    <div id="parametersList" class="border rounded p-3 bg-light">
                                        <!-- Dynamic parameter rows will be added here -->
                                    </div>
                                    <button type="button" id="addParameterBtn" class="btn btn-sm btn-success mt-2">
                                        <i class="fas fa-plus me-1"></i>Add Parameter
                                    </button>
                                    <textarea asp-for="PackageParameters" id="PackageParameters" class="form-control d-none"></textarea>
                                    <span asp-validation-for="PackageParameters" class="text-danger"></span>
                                    <small class="text-muted d-block mt-1">Add key-value pairs for SSIS package parameters (e.g., SrcServer, SrcDatabase, etc.)</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Create Package
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            // Toggle authentication fields
            function toggleAuthFields() {
                if ($('#useWindowsAuth').is(':checked')) {
                    $('#sqlAuthFields').hide();
                    $('#Username').val('');
                    $('#EncryptedPassword').val('');
                } else {
                    $('#sqlAuthFields').show();
                }
            }

            toggleAuthFields();
            $('#useWindowsAuth').on('change', toggleAuthFields);

            // Package Parameters Key-Value Editor
            let parameterIndex = 0;

            function addParameterRow(key = '', value = '') {
                const rowId = `param-row-${parameterIndex++}`;
                const row = $(`
                    <div class="row mb-2" id="${rowId}">
                        <div class="col-5">
                            <input type="text" class="form-control form-control-sm param-key" 
                                placeholder="Parameter Name" value="${key}" />
                        </div>
                        <div class="col-6">
                            <input type="text" class="form-control form-control-sm param-value" 
                                placeholder="Parameter Value" value="${value}" />
                        </div>
                        <div class="col-1">
                            <button type="button" class="btn btn-sm btn-danger remove-param" 
                                data-row-id="${rowId}">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    </div>
                `);

                $('#parametersList').append(row);
                updateJsonField();
            }

            function updateJsonField() {
                const params = {};
                $('#parametersList .row').each(function () {
                    const key = $(this).find('.param-key').val().trim();
                    const value = $(this).find('.param-value').val().trim();
                    if (key) {
                        params[key] = value;
                    }
                });

                if (Object.keys(params).length > 0) {
                    $('#PackageParameters').val(JSON.stringify(params));
                } else {
                    $('#PackageParameters').val('');
                }
            }

            // Add parameter button click
            $('#addParameterBtn').click(function () {
                addParameterRow();
            });

            // Remove parameter button click (event delegation)
            $(document).on('click', '.remove-param', function () {
                const rowId = $(this).data('row-id');
                $(`#${rowId}`).remove();
                updateJsonField();
            });

            // Update JSON when inputs change
            $(document).on('input', '.param-key, .param-value', function () {
                updateJsonField();
            });

            // Initialize with existing parameters if any
            const existingParams = $('#PackageParameters').val();
            if (existingParams) {
                try {
                    const params = JSON.parse(existingParams);
                    for (const [key, value] of Object.entries(params)) {
                        addParameterRow(key, value);
                    }
                } catch (e) {
                    console.error('Invalid JSON in PackageParameters', e);
                }
            }

            // Add one empty row by default if no parameters exist
            if ($('#parametersList .row').length === 0) {
                addParameterRow();
            }
        });
    </script>
}