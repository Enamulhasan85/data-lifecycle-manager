@model IEnumerable<DataLifecycleManager.Domain.Entities.DatabaseConnectionPackage>
@{
    ViewData["Title"] = "View Connections";
    var package = ViewBag.Package as DataLifecycleManager.Domain.Entities.SSISPackage;
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-list me-2"></i>Connections for Package: <span class="fw-bold">@package?.PackageName</span></h4>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-circle me-2"></i>No connections assigned to this package.
                        </div>
                    }
                    else
                    {
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Connection Name</th>
                                    <th>Server</th>
                                    <th>Database</th>
                                    <th>Status</th>
                                    <th>Role</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DatabaseConnection?.ConnectionName</td>
                                        <td>@item.DatabaseConnection?.ServerAddress</td>
                                        <td>@item.DatabaseConnection?.DatabaseName</td>
                                        <td>
                                            @if (item.DatabaseConnection?.Status == DataLifecycleManager.Domain.Enums.ConnectionStatus.Active)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@item.ConnectionRole</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
