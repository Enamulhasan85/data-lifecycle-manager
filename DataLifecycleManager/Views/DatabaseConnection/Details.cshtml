@model DataLifecycleManager.Presentation.ViewModels.DatabaseConnection.DatabaseConnectionViewModel

@{
    ViewData["Title"] = "Database Connection Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-info-circle me-2"></i>Database Connection Details</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <strong>Connection Name:</strong>
                            <p class="text-muted">@Model.ConnectionName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Provider:</strong>
                            <p class="text-muted">@Model.Provider</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Status:</strong>
                            <span class="badge @(Model.Status == DataLifecycleManager.Domain.Enums.ConnectionStatus.Active ? "bg-success" : "bg-danger")">
                                @Model.Status
                            </span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Server Address:</strong>
                            <p class="text-muted">@Model.ServerAddress</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Database Name:</strong>
                            <p class="text-muted">@Model.DatabaseName</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Username:</strong>
                            <p class="text-muted">@(Model.Username ?? "N/A")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong>Authentication:</strong>
                            <p class="text-muted">@(Model.UseWindowsAuthentication ? "Windows Authentication" : "SQL Server Authentication")</p>
                        </div>
                    </div>

                    <hr>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong>Created:</strong>
                            <p class="text-muted">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</p>
                            @if (!string.IsNullOrEmpty(Model.CreatedBy))
                            {
                                <small class="text-muted">by @Model.CreatedBy</small>
                            }
                        </div>
                        @if (Model.LastModifiedAt.HasValue)
                        {
                            <div class="col-md-6 mb-3">
                                <strong>Last Modified:</strong>
                                <p class="text-muted">@Model.LastModifiedAt.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</p>
                                @if (!string.IsNullOrEmpty(Model.LastModifiedBy))
                                {
                                    <small class="text-muted">by @Model.LastModifiedBy</small>
                                }
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">
                                <i class="fas fa-trash me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>