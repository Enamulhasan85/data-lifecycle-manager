@model List<DataLifecycleManager.Presentation.ViewModels.DatabaseConnection.DatabaseConnectionViewModel>

@{
    ViewData["Title"] = "Database Connections";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-database me-2"></i>Database Connections</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Connection
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-database fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No database connections configured yet.</p>
                    <a asp-action="Create" class="btn btn-primary">Create First Connection</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Connection Name</th>
                                <th>Provider</th>
                                <th>Server</th>
                                <th>Database</th>
                                <th>Auth Type</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ConnectionName</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.Provider</span>
                                    </td>
                                    <td>@item.ServerAddress</td>
                                    <td>@item.DatabaseName</td>
                                    <td>
                                        @if (item.UseWindowsAuthentication)
                                        {
                                            <span class="badge bg-primary"><i class="fab fa-windows"></i> Windows Auth</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-database"></i> SQL Auth</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Status == DataLifecycleManager.Domain.Enums.ConnectionStatus.Active)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button type="button" class="btn btn-outline-primary test-connection"
                                                data-id="@item.Id" title="Test Connection">
                                                <i class="fas fa-plug"></i>
                                            </button>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary"
                                                title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"
                                                title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.test-connection').click(function () {
                var $btn = $(this);
                var id = $btn.data('id');
                var originalHtml = $btn.html();

                $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

                $.post('@Url.Action("TestConnection", "DatabaseConnection")/' + id, function (response) {
                    if (response.success) {
                        toastr.success(response.message, 'Connection Test');
                    } else {
                        toastr.error(response.message, 'Connection Test Failed');
                    }
                }).fail(function () {
                    toastr.error('Error testing connection', 'Error');
                }).always(function () {
                    $btn.prop('disabled', false).html(originalHtml);
                });
            });
        });
    </script>
}